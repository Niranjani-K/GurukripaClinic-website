<script>
    
function showPassword() {
  var x = document.getElementById("password");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
var exists = false;
</script>

<body>
    <h1 style="color: #fff;">Gurukripa clinic</h1>
    <div class = "container">
        <div class ="row align-items-center my-5">
            <div class = "col-sm-3 col-md-4 mx-auto">
