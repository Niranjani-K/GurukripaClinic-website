                    <div class = "account-wall">
                        <img id="profile-img" class=" rounded-circle profile-img-card" src= "https://png.pngtree.com/png-vector/20190919/ourlarge/pngtree-user-login-or-authenticate-icon-on-gray-background-flat-icon-ve-png-image_1742031.jpg" style = "max-width: 60%;"alt = ""/>
                        <p id="profile-name" class="profile-name-card"></p>
                        <p id="profile-name" class="profile-name-card"></p>
                        <% if(exists){ %>
                            <pr style="color: red;">Incorrect Password</pr>
                         <% } %>   
                        <form class="form-signin" action = "/admin" method="POST">
                            <input type = "password" placeholder="Enter password" class ="form-control form-group" required name="password" id = "password">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" onclick="showPassword()">
                                <label class="form-check-label" for="flexCheckDefault">
                                 Show Password
                                </label>
                              </div>
                            <button class ="btn btn-lg btn-primary btn-block" type = "submit">Continue</button>
                        </form>
                    </div>
                </div>
            </div>
